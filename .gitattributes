# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Explicitly declare text files
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh text eol=lf
*.toml text eol=lf
*.txt text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.coverage binary

# Mark generated/vendor files for GitHub linguist
tests/api/cassettes/* linguist-generated=true
htmlcov/* linguist-generated=true
.coverage linguist-generated=true
*.pyc linguist-generated=true
__pycache__/* linguist-generated=true

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.rar binary
*.7z binary
