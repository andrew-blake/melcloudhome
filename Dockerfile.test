FROM ghcr.io/astral-sh/uv:python3.13-bookworm-slim

WORKDIR /app

# Install build tools for C extensions (needed for lru-dict in homeassistant)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml uv.lock ./
COPY custom_components ./custom_components
COPY tests ./tests
COPY tools ./tools

# Install dependencies using uv (includes test dependencies)
RUN uv sync --frozen

# Note: pytest-homeassistant-custom-component installed at runtime via docker-compose
# (not in build due to volume mount overwriting /app/.venv)

# Default command (run via uv)
CMD ["uv", "run", "pytest", "tests/", "-v"]
