FROM ghcr.io/astral-sh/uv:python3.13-bookworm-slim

WORKDIR /app

# Install build tools for C extensions (needed for lru-dict in homeassistant)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files first (change less frequently)
COPY pyproject.toml uv.lock ./

# Install dependencies using uv (includes test dependencies)
# This layer is cached unless pyproject.toml or uv.lock changes
RUN uv sync --frozen

# NOTE: pytest-homeassistant-custom-component NOT installed here
# It's only needed for integration tests and includes pytest-socket which blocks E2E tests
# Integration tests install it at runtime via docker-compose command

# Copy source code LAST (changes most frequently)
# Volume mounts will override these at runtime, but they're needed for uv sync to work
COPY custom_components ./custom_components
COPY tests ./tests
COPY tools ./tools

# Default command (run via uv)
CMD ["uv", "run", "pytest", "tests/", "-v"]
